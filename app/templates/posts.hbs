<h1>Posts</h1>

<div class="col-md-4">
	<ul class="list-unstyled">
		{{#each item in model}}
			<li>
				{{#link-to 'post' item}} 
				{{format-markdown item.title}}
				<span class="muted">
					by {{item.author.name}}
				</span>
				{{/link-to}}
			</li>
		{{/each}}
	</ul>
</div>

<div class="col-md-8">
	{{outlet}}
</div>
